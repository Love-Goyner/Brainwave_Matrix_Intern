<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Sign Up | YourSite</title>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');
      
      :root {
        --signup-primary: #4361ee;
        --signup-secondary: #3a0ca3;
        --signup-accent: #f72585;
        --signup-light: #f8f9fa;
        --signup-dark: #212529;
        --signup-gray: #6c757d;
        --signup-success: #4cc9f0;
      }
      
      body {
        font-family: 'Poppins', sans-serif;
        background-color: #f5f7fa;
        color: var(--signup-dark);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      
      .signup-container {
        max-width: 500px;
        margin: 2rem auto;
        padding: 2.5rem;
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        animation: signup-fadeIn 0.4s ease-out;
      }
      
      @keyframes signup-fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
      }
      
      .signup-header {
        text-align: center;
        margin-bottom: 2.5rem;
      }
      
      .signup-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--signup-dark);
        margin-bottom: 0.5rem;
        position: relative;
      }
      
      .signup-title:after {
        content: '';
        position: absolute;
        width: 60px;
        height: 4px;
        background: var(--signup-accent);
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        border-radius: 2px;
      }
      
      .signup-subtitle {
        color: var(--signup-gray);
        font-size: 0.95rem;
      }
      
      .signup-form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
        display: block;
        color: var(--signup-dark);
      }
      
      .signup-form-control {
        width: 100%;
        padding: 0.9rem 1.2rem;
        font-size: 1rem;
        border: 1px solid #e9ecef;
        border-radius: 10px;
        transition: all 0.3s ease;
        background-color: var(--signup-light);
      }
      
      .signup-form-control:focus {
        border-color: var(--signup-primary);
        box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.15);
        outline: none;
        background-color: white;
      }
      
      .signup-form-text {
        font-size: 0.85rem;
        color: var(--signup-gray);
        margin-top: 0.3rem;
      }
      
      .signup-btn {
        background-color: var(--signup-primary);
        color: white;
        border: none;
        padding: 1rem;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.3s ease;
        width: 100%;
        margin-top: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }
      
      .signup-btn:hover {
        background-color: var(--signup-secondary);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
      }
      
      .signup-footer {
        text-align: center;
        margin-top: 1.5rem;
        font-size: 0.9rem;
        color: var(--signup-gray);
      }
      
      .signup-footer a {
        color: var(--signup-primary);
        text-decoration: none;
        font-weight: 500;
      }
      
      .signup-footer a:hover {
        text-decoration: underline;
      }
      
      .signup-input-group {
        position: relative;
        margin-bottom: 1.5rem;
      }
      
      .signup-input-icon {
        position: absolute;
        left: 1.2rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--signup-gray);
      }
      
      .signup-form-control.with-icon {
        padding-left: 3rem;
      }
      
      @media (max-width: 576px) {
        .signup-container {
          padding: 1.5rem;
          margin: 1rem;
        }
        
        .signup-title {
          font-size: 1.7rem;
        }
      }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  </head>
  <body>
    <%- include('./partials/nav') %>
    
    <div class="signup-container">
      <div class="signup-header">
        <h1 class="signup-title">Create Account</h1>
        <p class="signup-subtitle">Join our community today</p>
      </div>
      
      <form action="/user/signup" method="post">
        <div class="signup-input-group">
          <label for="fullName" class="signup-form-label">Full Name</label>
          <div style="position: relative;">
            <i class="fas fa-user signup-input-icon"></i>
            <input 
              type="text" 
              name="fullName" 
              class="signup-form-control with-icon" 
              id="fullName" 
              placeholder="John Doe"
              required
            >
          </div>
        </div>
        
        <div class="signup-input-group">
          <label for="email" class="signup-form-label">Email Address</label>
          <div style="position: relative;">
            <i class="fas fa-envelope signup-input-icon"></i>
            <input 
              type="email" 
              name="email" 
              class="signup-form-control with-icon" 
              id="email" 
              placeholder="your@email.com"
              required
            >
          </div>
          <div class="signup-form-text">We'll never share your email with anyone else.</div>
        </div>
        
        <div class="signup-input-group">
          <label for="password" class="signup-form-label">Password</label>
          <div style="position: relative;">
            <i class="fas fa-lock signup-input-icon"></i>
            <input 
              type="password" 
              name="password" 
              class="signup-form-control with-icon" 
              id="password" 
              placeholder="••••••••"
              required
            >
          </div>
        </div>
        
        <button type="submit" class="signup-btn">
          <i class="fas fa-user-plus" style="margin-right: 8px;"></i> Sign Up
        </button>
        
        <div class="signup-footer">
          Already have an account? <a href="/user/signin">Sign in</a>
        </div>
      </form>
    </div>
    
    <%- include('./partials/scripts') %>
    
    <script>
      // Add password strength indicator (optional)
      document.getElementById('password').addEventListener('input', function() {
        const password = this.value;
        const strengthIndicator = document.getElementById('password-strength');
        
        if (password.length === 0) {
          if (strengthIndicator) strengthIndicator.remove();
          return;
        }
        
        if (!strengthIndicator) {
          const div = document.createElement('div');
          div.id = 'password-strength';
          div.className = 'signup-form-text';
          this.parentNode.parentNode.appendChild(div);
        }
        
        const strength = calculatePasswordStrength(password);
        const strengthText = ['Very Weak', 'Weak', 'Moderate', 'Strong', 'Very Strong'][strength];
        const strengthColor = ['#dc3545', '#fd7e14', '#ffc107', '#28a745', '#20c997'][strength];
        
        document.getElementById('password-strength').innerHTML = 
          `Password Strength: <span style="color: ${strengthColor}">${strengthText}</span>`;
      });
      
      function calculatePasswordStrength(password) {
        let strength = 0;
        if (password.length > 7) strength++;
        if (password.length > 11) strength++;
        if (/[A-Z]/.test(password)) strength++;
        if (/[0-9]/.test(password)) strength++;
        if (/[^A-Za-z0-9]/.test(password)) strength++;
        return Math.min(strength, 4);
      }
    </script>
  </body>
</html>