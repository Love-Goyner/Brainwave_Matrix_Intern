<head>
  <style>
    .hover-link {
      transition: background 0.2s ease, color 0.2s ease;
    }
    .hover-link:hover {
      /* background-color: rgba(255, 255, 255, 0.1); */
      color: #ffc107 !important;
      scale: 1.06;
      transition: all;
      transition-duration: 1s;
    }
  </style>
</head>

<nav class="navbar navbar-expand-lg bg-dark border-bottom border-secondary">
  <div class="container">
    <a
      class="navbar-brand fw-semibold text-white"
      href="/"
      style="font-size: 1.5rem"
      >Blogify</a
    >

    <button
      class="navbar-toggler border-0"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavDropdown"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ms-auto align-items-center gap-2">
        <li class="nav-item">
          <a
            class="nav-link text-light px-3 py-1 rounded hover-link active"
            href="/"
            >Home</a
          >
        </li>

        <% if (locals.user) { %>
        <li class="nav-item">
          <a
            class="nav-link text-light px-3 py-1 rounded hover-link"
            href="/blog/add-new"
            >Add Blog</a
          >
        </li>
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle text-light px-3 py-1 rounded hover-link"
            href="#"
            role="button"
            data-bs-toggle="dropdown"
          >
            <%= user.fullName %>
          </a>
          <ul class="dropdown-menu dropdown-menu-end mt-2">
            <li><a class="dropdown-item" href="/user/logout">Log Out</a></li>
          </ul>
        </li>
        <% } else { %>
        <li class="nav-item">
          <a
            class="nav-link text-light px-3 py-1 rounded hover-link"
            href="/user/signup"
            >Create Account</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link text-light px-3 py-1 rounded hover-link"
            href="/user/signin"
            >Sign in</a
          >
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

<% if (locals.error) { %>
<div class="container mt-3">
  <div class="alert alert-danger p-2" role="alert"><%= locals.error %></div>
</div>
<% } %>
